<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Membuat Kotak Dialog"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"/>

    <Button
        android:layout_width="300dp"
        android:id="@+id/toastBtn"
        android:layout_height="wrap_content"
        android:text="@string/toastTextBtn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#02fafe"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/listDialogBtn"
        android:layout_gravity="center"
        android:layout_below="@+id/toastBtn"
        android:layout_centerHorizontal="true"
        android:text="@string/listDialogTextBtn"
        android:textColor="@color/white"
        android:background="#0f03fe"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:id="@+id/exitBtn"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:text="@string/exitTextBtn"
        android:textColor="#000"
        android:background="#fe0101"/>


</RelativeLayout>